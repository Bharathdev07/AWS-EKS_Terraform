pipeline {
    agent any
    tools{
        terraform 'terraform'
    }
    environment {
        access_key = env.AWS_ACCESS_KEY_ID
        secret_key = env.AWS_SECRET_ACCESS_KEY
    }
    stages {
        stage ('Terraform Init') {
            steps {
                sh 'terraform init'
            }
        }
        stage ('Terraform Plan') {
            steps {
               sh 'terraform plan'
            }
        }
        stage ('Terraform Apply') {
            steps {
                sh 'terraform apply --auto-approve'
            }
        }
    }
}